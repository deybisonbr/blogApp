{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-box">
        <h4>Editar Postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo" class="form-label">Titulo:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug" class="form-label">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao" class="form-label">Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}"> 
            <label for="conteudo" class="form-label">Conteúdo:</label>
            <textarea name="conteudo" id="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria" class="form-label">Categoria:</label>
            <select name="categoria" id="categoria" class="form-select" value="{{postagens.categoria}}">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-info mt-4" type="submit">Salvar</button>
        </form>
    </div>
</div>